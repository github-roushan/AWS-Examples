#!/usr/bin/env bash
echo "== Put Objects in a bucket =="

# Check if bucket name and file name are provided
if [ $# -lt 2 ]; then
    echo "Usage: $0 <bucket-name> <file-path>"
    exit 1
fi

BUCKET_NAME="$1"
FILE_PATH="$2"

# Check if file exists
if [ ! -f "$FILE_PATH" ]; then
    echo "Error: File '$FILE_PATH' not found!"
    exit 1
fi

# Upload file to S3 bucket
aws s3 cp "$FILE_PATH" "s3://$BUCKET_NAME/"